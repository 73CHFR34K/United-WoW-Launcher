<Window x:Class="United_WoW_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:United_WoW_Launcher"
        mc:Ignorable="d"
        Title="United WoW Launcher" Icon="WoW.ico" ResizeMode="CanMinimize" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="{x:Null}">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/Panel051.jpg"/>
        </Grid.Background>
        <ProgressBar Name="pg2" Margin="34,391,40,16" IsIndeterminate="True" Opacity="0.8" Height="12.4" Background="#0000"	Foreground="#FFBA03" BorderThickness="0.0" Loaded="PBar_Loaded" />
        <TextBlock Name="status" HorizontalAlignment="Left"	Height="14"	Margin="36,373,0,0"	TextWrapping="Wrap"	VerticalAlignment="Top"	Width="718"	Foreground="#FFFFFFFF"	Opacity="0.7" Loaded="TextBlock_Loaded"/>
        <Button Content="Spielen" HorizontalAlignment="Left" Margin="34,331,0,0" VerticalAlignment="Top" Width="135" Height="37" Click="Button_Click"/>
    </Grid>
</Window>
